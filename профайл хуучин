<script>
    document.addEventListener('DOMContentLoaded', () => {
    // 1. Хадгалагдсан хэрэглэгчийн датаг авна
    const currentUser = JSON.parse(localStorage.getItem('currentUser'));

    if (currentUser) {
        // 2. HTML элементүүдээ олно
        const profileDiv = document.getElementById('mainProfilePic');
        const nameDisplay = document.getElementById('userName');
        const emailDisplay = document.getElementById('userEmail');

        // 3. Нэр болон Имэйлийг солих
        if (nameDisplay) nameDisplay.textContent = currentUser.name || "Username";
        if (emailDisplay) emailDisplay.textContent = currentUser.email || "";

        // 4. Зургийг солих (ЭНЭ ХЭСЭГ ХАМГИЙН ЧУХАЛ)
        if (profileDiv) {
            if (currentUser.profilePic) {
                // Хэрэв localStorage-д зураг байвал түүнийг харуулна
                profileDiv.style.backgroundImage = `url('${currentUser.profilePic}')`;
            } else {
                // Байхгүй бол default зураг харуулна
                profileDiv.style.backgroundImage = `url('https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png')`;
            }
        }
    } else {
        // Хэрэв нэвтрээгүй бол нэвтрэх хуудас руу шилжүүлнэ
        window.location.href = 'login.html';
    }
});

function logoutUser() {
    if(confirm("Are you sure you want to logout?")) {
        // Logout хийсэн ч мэдээллийг localStorage-д хэвээр үлдээе
        // Зөвхөн одоо нэвтэрсэн төлөвийг арилгаж болно
        localStorage.removeItem('currentUser');
        window.location.href = 'login.html';
    }
}
</script>

