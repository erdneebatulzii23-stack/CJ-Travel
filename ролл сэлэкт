<script>
    let selectedType = "";
    const cards = document.querySelectorAll('.group.cursor-pointer');
    const nextButton = document.querySelector('.next-button');

    cards.forEach((card, index) => {
        card.addEventListener('click', () => {
            cards.forEach(c => {
                c.classList.remove('border-primary', 'bg-blue-50/50', 'dark:bg-blue-900/20');
                c.classList.add('border-transparent');
            });

            card.classList.remove('border-transparent');
            card.classList.add('border-primary', 'bg-blue-50/50', 'dark:bg-blue-900/20');

            if (index === 0) selectedType = "traveler";
            else if (index === 1) selectedType = "guide";
            else if (index === 2) selectedType = "provider";
        });
    });

    nextButton.addEventListener('click', (e) => {
        e.preventDefault();
        if (selectedType === "provider") {
            window.location.href = "provider-setup.html";
        } else if (selectedType =="traveler") {
            window.location.href = "traveler-setup.html";
        } else if (selectedType === "guide") {
            window.location.href = "guides-setup.html";
        } else {
            alert("Please select an account type to continue.");
        }
    });
</script>
